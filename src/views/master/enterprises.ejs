<%- include ('partials/_masterHeader'); %>

<script>
    $("#buttonEnterprises").attr("aria-pressed", "true");
</script>

<div class="container-fluid">
    <h1>Empresas</h1>
      
    
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalempresas">
        Añadir nueva Empresa
    </button>

    
    <!-- Inicio Modal -->
    <div class="modal fade" id="modalempresas" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <!-- Modal header-->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Registrar Empresa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- Modal body-->
                <div class="modal-body">

                    <form class="text-center p-3 row container-fluid" action="/addEnterprise" data-toggle="validator" method="POST">

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="rut" class="form-control form-control-sm" required>
                            <label for="rut">Rut</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="nombre" class="form-control form-control-sm" required>
                            <label for="nombre">Nombre o Razón Social</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="String" style="text-transform:uppercase" name="giro" class="form-control form-control-sm" required>
                            <label for="giro">Giro</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="representante" class="form-control form-control-sm" required>
                            <label for="representante">Representante</label>
                        </div>

                        
                        <div class="md-form form-sm col-sm-4">
                            <input type="text" style="text-transform:uppercase" name="region" class="form-control form-control-sm" required>
                            <label for="region">Región</label>
                        </div>


                        <div class="md-form form-sm col-sm-3">
                            <input type="text" style="text-transform:uppercase" name="comuna" class="form-control form-control-sm"  required>
                            <label for="comuna">Comuna</label>
                        </div>

                        <div class="md-form form-sm col-sm-3">
                            <input type="string" style="text-transform:uppercase" name="direccion" class="form-control form-control-sm" required>
                            <label for="direccion">Dirección</label>
                        </div>
    
                        <div class="md-form form-sm col-sm-6">
                            <input type="number" name="celular" class="form-control form-control-sm">
                            <label for="celular">N° Celular</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-3">
                            <input type="string" style="text-transform:uppercase" name="email" class="form-control form-control-sm" required>
                            <label for="email">Email</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-6" >
                            <input type="string" style="text-transform:uppercase" name="banco" class="form-control form-control-sm" style="text-transform:uppercase">
                            <label for="banco">Banco</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-6">
                            <input type="string" style="text-transform:uppercase" name="tipo" class="form-control form-control-sm" style="text-transform:uppercase">
                            <label for="tipo">Tipo de Cuenta</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-6">
                            <input type="number" name="nrocuenta" class="form-control form-control-sm" style="text-transform:uppercase">
                            <label for="nrocuenta">N° Cuenta</label>
                        </div>
                        

                        
                        <!-- Modal footer-->
                        <div class="modal-footer container-fluid">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        <!--Fin Modal-->
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Inicio Tabla-->

    <!--Inicio Tabla Principal-->

    <div class="table-responsive">

        <table class="table table-hover table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th scope="col">Rut</th>
                    <th scope="col">Nombre/Razón Social</th>
                    <th scope="col">Giro</th>
                    <th scope="col">Representante</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Celuar</th>
                    <th scope="col">Banco</th>
                    <th scope="col">Tipo de Cuenta</th>
                    <th scope="col">N° Cuenta</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<empresas.length; i++){ %>
                <tr>
                    <td style="text-transform:uppercase"><%= empresas[i].rut  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].nombre  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].giro  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].representante  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].region%>, <%= empresas[i].comuna%>, <%= empresas[i].direccion%></td>
                    <td><%= empresas[i].email  %></td>
                    <td><%= empresas[i].celular  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].banco  %></td>
                    <td style="text-transform:uppercase"><%= empresas[i].tipo  %></td>
                    <td><%= empresas[i].nrocuenta  %></td>
                    
                    <td>
                        <a href="/deleteEnterprise/<%= empresas[i]._id %>" class="btn btn-danger">Borrar</a>
                        <a href="/master/editEnterprise/<%= empresas[i]._id %>" class="btn btn-info">Editar</a>
                    </td>

                </tr>
                <%}%>
            </tbody>
        </table>
    </div>    
        
    
    
</div>

<%- include ('partials/_footer'); %>