<%- include ('payments/partials/_paymentsheader'); %>

<script>
    $("#buttonPayments").attr("aria-pressed", "true");
</script>

<div class="container-fluid">
    <h1>Pagos</h1>
    
       <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalbancos">
        Añadir nuevo Banco
    </button>

    
    <!-- Inicio Modal -->
    <div class="modal fade" id="modalbancos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <!-- Modal header-->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Registrar Banco</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- Modal body-->
                <div class="modal-body">

                    <form class="text-center p-3 row container-fluid" action="/addbank" data-toggle="validator" method="POST">

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="rut" class="form-control form-control-sm" required>
                            <label for="rut">Rut</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="nombre" class="form-control form-control-sm" required>
                            <label for="nombre">Nombre o Razón Social</label>
                        </div>

                        <div class="md-form form-sm col-sm-3">
                            <input type="string" style="text-transform:uppercase" name="direccion" class="form-control form-control-sm" required>
                            <label for="direccion">Dirección</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" style="text-transform:uppercase" name="representante" class="form-control form-control-sm" required>
                            <label for="representante">Representante</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-6">
                            <input type="number" name="celular" class="form-control form-control-sm">
                            <label for="celular">N° Celular</label>
                        </div>
                        
                        <div class="md-form form-sm col-sm-3">
                            <input type="string" style="text-transform:uppercase" name="email" class="form-control form-control-sm" required>
                            <label for="email">Email</label>
                        </div>
                        
                        <!-- Modal footer-->
                        <div class="modal-footer container-fluid">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        <!--Fin Modal-->
                    </form>
                </div>
            </div>
        </div>
    </div>

   <!--Inicio Tabla Principal-->

    <div class="table-responsive">

        <table class="table table-hover table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th scope="col">Nombre/Razón Social</th>
                    <th scope="col">N° OT</th>
                    <th scope="col">Fecha OT</th>
                    <th scope="col">Fecha de Pago</th>
                    <th scope="col">Monto a pagar</th>
                    <th scope="col">Saldo Restante</th>
                    <th scope="col">Abono</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Ultima Actualización</th>
                    <th scope="col">Usuario</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<bancos.length; i++){ %>
                <tr>
                    <td style="text-transform:uppercase"><%= bancos[i].nombre  %></td>
                    <td><%= bancos[i].ot  %></td>
                    <td style="text-transform:uppercase"><%= bancos[i].fechaot%></td>
                    <td style="text-transform:uppercase"><%= bancos[i].fechapago  %></td>
                    <td><%= bancos[i].montoacordado  %></td>
                    <td><%= bancos[i].montorestante  %></td>
                    <td><%= bancos[i].abono  %></td>
                    <td style="text-transform:uppercase"><%= bancos[i].estado  %></td>
                    <td><%= bancos[i].actualizacion  %></td>
                    <td style="text-transform:uppercase"><%= bancos[i].usuario  %></td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>    
         
    
    
</div>

<%- include ('payments/partials/_footer'); %>