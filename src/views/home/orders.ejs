<%- include ('../partials/_ordersheader'); %>

    <script>
        $("#buttonOrders").attr("aria-pressed", "true");
    </script>

    <!-- Page Content -->
    <div class="container-fluid">
        <h1>Ordenes de transporte</h1>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalOrders">
            Crear nueva Orden de Transporte
        </button>

        <!-- Inicio Modal -->
        <div class="modal fade" id="modalOrders" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">

                    <!-- Modal header-->
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Crear Orden de Transporte</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <!-- Modal body-->
                    <div class="modal-body">
                        <form class="text-center p-3 row container-fluid" action="/addOrder" data-toggle="validator"
                            method="POST">
                            <!-- Modal footer-->
                            <div class="modal-footer container-fluid">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                            <!--Fin Modal-->
                        </form>
                    </div>
                </div>
            </div>
        </div>





    </div>

    <%- include ('../partials/_homefooter'); %>