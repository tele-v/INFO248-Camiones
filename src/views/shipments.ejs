<%- include ('partials/_header'); %>

<script>
    $("#buttonShipments").attr("aria-pressed", "true");
</script>

<!-- Page Content -->
<div class="container-fluid">
    <h1>Viajes</h1>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalviajes">
        AÃ±adir nuevo viaje
    </button>

    <!-- Inicio Modal -->
    <div class="modal fade" id="modalviajes" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <!-- Modal header-->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Registrar Viaje</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- Modal body-->
                <div class="modal-body">
                    <form class="text-center p-3 row container-fluid" action="/addShipment" data-toggle="validator"
                        method="POST">

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" name="origen" class="form-control form-control-sm" required>
                            <label for="origen">Origen</label>
                        </div>

                        <div class="md-form form-sm col-sm-4">
                            <input type="string" name="destino" class="form-control form-control-sm" required>
                            <label for="destino">Destino</label>
                        </div>

                        <div class="modal-footer container-fluid">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Inicio Tabla Principal-->

    <div class="table-responsive">

        <table class="table table-hover table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th scope="col">Origen</th>
                    <th scope="col">Destino</th>
                    <th scope="col">Camion</th>
                    <th scope="col">Chofer</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<shipments.length; i++){ %>
                <tr>
                    <td style="text-transform:uppercase"><%= shipments[i].origen  %></td>
                    <td style="text-transform:uppercase"><%= shipments[i].destino  %></td>
                    <td style="text-transform:uppercase"><%= shipments[i].camion  %></td>
                    <td style="text-transform:uppercase"><%= shipments[i].chofer  %></td>
                    <td>
                        <a class="btn btn-danger">Borrar</a>
                        <a class="btn btn-info">Editar</a>
                    </td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>    
</div>

<%- include ('partials/_footer'); %>
